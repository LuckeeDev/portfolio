---
import type { TailwindColor } from '@/utils/types/tailwind';
import { MAP_COLOR_VARIANT_TO_BG } from '@/utils/mapVariants';

type Props = {
	position: 'bottom' | 'top';
	color: TailwindColor;
};

const { position, color } = Astro.props;
---

<style>
	@media (max-width: 768px) {
		.blurred {
			filter: blur(4rem);
		}
	}

	@media (min-width: 768px) {
		.blurred {
			filter: blur(8rem);
		}
	}
</style>

<div
	class:list={{
		[`fixed z-0 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full ${MAP_COLOR_VARIANT_TO_BG[color]} blurred opacity-50`]: true,
		['left-0 top-0']: position === 'top',
		['right-0 bottom-0']: position === 'bottom',
	}}
>
</div>
